<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cooksnest">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.CooksNest">
        <activity android:name=".filtersActivity"></activity>
        <activity android:name=".messaging"
            android:screenOrientation="portrait"/>
        <activity android:name=".otheruser_profile"
            android:screenOrientation="portrait"/>
        <activity android:name=".viewRecipe"
            android:screenOrientation="portrait"/>
        <activity android:name=".Launchscreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".registerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".addrecipe"
            android:screenOrientation="portrait"/>
        <activity android:name=".myPostedRecipes"
            android:screenOrientation="portrait"/>
        <activity android:name=".logInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>