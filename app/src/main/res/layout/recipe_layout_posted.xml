<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="411dp"
        android:layout_height="53dp"
        android:background="@drawable/browse_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="178dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_weight="25"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/servingSize"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_weight="25"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prepTime"
        android:layout_width="96dp"
        android:layout_height="49dp"
        android:layout_weight="25"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/servingSize"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/opendetails"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="#A7DF98"
        android:scaleType="fitCenter"
        android:src="@drawable/export_icon_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hashtags" />

    <ImageButton
        android:id="@+id/editrecipe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="#A7DF98"
        android:scaleType="fitCenter"
        android:src="@drawable/img_215612"
        app:layout_constraintStart_toEndOf="@+id/opendetails"
        app:layout_constraintTop_toBottomOf="@+id/hashtags" />

    <ImageButton
        android:id="@+id/deleterecipe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="#A7DF98"
        android:scaleType="fitCenter"
        android:src="@drawable/trash_512"
        app:layout_constraintStart_toEndOf="@+id/editrecipe"
        app:layout_constraintTop_toBottomOf="@+id/hashtags" />

    <TextView
        android:id="@+id/hashtags"
        android:layout_width="118dp"
        android:layout_height="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <ImageView
        android:id="@+id/foodpic"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deleterecipe"
        app:layout_constraintTop_toBottomOf="@+id/prepTime" />

</androidx.constraintlayout.widget.ConstraintLayout>