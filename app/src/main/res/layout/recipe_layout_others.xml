<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="411dp"
        android:layout_height="53dp"
        android:background="@drawable/browse_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/OtherRecipeName"
        android:layout_width="178dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_weight="25"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/otherservingSize"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_weight="25"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/OtherRecipeName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/otherprepTime"
        android:layout_width="96dp"
        android:layout_height="49dp"
        android:layout_weight="25"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/otherservingSize"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/otheropendetails"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="#A7DF98"
        android:scaleType="fitCenter"
        android:src="@drawable/export_icon_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherhashtags" />

    <TextView
        android:id="@+id/otherhashtags"
        android:layout_width="118dp"
        android:layout_height="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OtherRecipeName" />

    <ImageView
        android:id="@+id/otherfoodpic"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherprepTime"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>